{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
      {
        "customType": "regex",
        "managerFilePatterns": ["docs/bootstrap.md"],
        "matchStrings": [
          "\\* install `pip install ansible==(?<currentValue>\\d+\\.\\d+\\.\\d+)`"
        ],
        "datasourceTemplate": "pypi",
        "depNameTemplate": "ansible"
      }
    ]
}
