{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^docs/bootstrap\\.md$"],
        "matchStrings": [
          "(?<depName>ansible)==(?<currentValue>[a-zA-Z0-9._-]+)"
        ],
        "datasourceTemplate": "pypi"
      }
    ]
}
